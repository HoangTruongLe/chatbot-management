<% if @master_category.errors.present? %>
  $("#top_master_category").find("#master_category_form").replaceWith("<%= j render partial: 'form', locals: { master_category: @master_category, type: 'new' } %>")
<% else %>
  toastr["success"]("<%= t('.master_category_created_successfully') %>");
  $('.modal').modal('hide');
  location.reload();
<% end %>
