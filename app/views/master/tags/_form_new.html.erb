<%= form_for [:master,tag], remote: true, html: { class: "form-horizontal", id: "form_tag" } do |f| %>
  <% if tag.errors.any? %>
    <br>
    <div class="error-log">
      <h5><%= t("activerecord.errors.error_message")%></h5>
      <ul>
        <% tag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row form-input-wrapper">
    <div class="form-group">
      <%= f.label :name, class: "control-label col-sm-3 required" %>
      <div class="col-sm-9">
        <%= f.text_field :name, class: "form-control", placeholder: true, maxlength: 200 %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :activity, class: "control-label col-sm-3" %>
      <div class="col-sm-9">
        <div class="radio radio-primary radio-inline">
          <%= f.radio_button :activity, true %>
          <%= f.label :activity_true, t('.activity.active') %>
        </div>
        <div class="radio radio-primary radio-inline">
          <%= f.radio_button :activity, false %>
          <%= f.label :activity_false, t('.activity.inactive') %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-inline padding-0 text-center">
        <%= link_to t('cancel_button'), 'javascript:void(0);', class: 'btn btn-cancel clear-input-search btn-gray mrg10R btn-clear-filter btn-smalll', style: 'color: #286bcc', data: { dismiss: 'modal' }%>
        <%= button_tag tag.new_record? ? t('master.tags.index.create') : t('master.tags.index.update'), data: { disable_with: tag.new_record? ? t('master.tags.index.create') : t('master.tags.index.update') }, class: 'btn btn-save btn-clear-filter btn-smalll' %>
      </div>
    </div>
  </div>
<%end%>
