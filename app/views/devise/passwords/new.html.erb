<div class="row mrg45T">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="text-center mrg45B">
          <h3 class="mrg10T "><%= t('devise.passwords.password_reminder') %></h3>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.label :email %>
          <%= f.input :email, autofocus: true, label: false, placeholder: true %>
          <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <%= f.submit t("devise.passwords.reset_password"), class: "btn btn-primary btn-raised btn-lg btn-block"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>