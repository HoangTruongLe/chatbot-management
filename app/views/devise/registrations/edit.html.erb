<div class="container contain-wrapper">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put , class: "form-horizontal"}) do |f| %>
    <div class="row">
      <div class="col-sm-6">
        <h4><%= t('.title') %></h4>
      </div>
      <div class="col-sm-6 text-right padding-0">
        <%= link_to t('cancel_button'), root_path, class: "btn btn-cancel" %>
        <%= f.submit t('update_button'), class: "btn btn-save" %>
      </div>
    </div>
    <% if resource.errors.any? %>
      <br>
      <div class="error-log">
        <h5><%= t("activerecord.errors.error_message")%></h5>
        <ul>
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row form-input-wrapper">
      <div class="form-group">
        <%= f.label :current_password, class: "control-label col-sm-2 required" %>
        <div class="col-sm-9">
          <%= f.password_field :current_password, class: "form-control", placeholder: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "control-label col-sm-2 required" %>
        <div class="col-sm-9">
          <%= f.password_field :password, class: "form-control", placeholder: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: "control-label col-sm-2 required" %>
        <div class="col-sm-9">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 text-left padding-0">
      </div>
      <div class="col-sm-6 text-right padding-0">
        <%= link_to t('cancel_button'), root_path, class: "btn btn-cancel" %>
        <%= f.submit t('update_button'), class: "btn btn-save" %>
      </div>
    </div>
  <% end %>
</div>
