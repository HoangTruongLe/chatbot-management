<div class="container contain-wrapper">
  <div class="row">
    <div class="col-md-7">
      <%= "#{t('activerecord.attributes.category.id')}: #{@category.id} 更新履歴" %>
    </div>
    <div class="col-md-2">
      <%= "#{t('.user_create')}: #{@category.try(:owner).try(:name)}" %>
    </div>
    <div class="col-md-3 text-right">
      <%= "#{t('.time_create')}: #{format_datetime(@category.created_at)}" %>
    </div>
  </div>
  <br/>
  <table class="table table-striped table-bordered">
    <thead>
      <tr class="active">
        <th class="text-center"><%= t('.time_update') %></th>
        <th class="text-center"><%= t('.user_update') %></th>
        <th class="text-center"><%= t('.action') %></th>
      </tr>
    </thead>
    <tbody>
      <% @category_logs.each_with_index do |cate_log, index| %>
        <tr>
          <td class="text-center vertical-middle"><%= format_datetime(cate_log.updated_at) %></td>
          <td class="text-center vertical-middle"><%= cate_log.try(:user).try(:name) %></td>
          <td class="text-center vertical-middle"><%= link_to(t('.detail'), index.zero? ? category_path(@category): show_log_category_path(cate_log), class: "btn btn-default btn-gray btn-action") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center"><%= paginate @category_logs %></div>
</div>
