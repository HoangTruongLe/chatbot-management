        <%= f.text_field :eval_D_type, class: "form-control", placeholder: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :eval_D_value, class: "control-label col-sm-2" %>
      <div class="col-sm-9">
        <%= f.text_field :eval_D_value, class: "form-control", placeholder: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :eval_E_name, class: "control-label col-sm-2" %>
      <div class="col-sm-9">
        <%= f.text_field :eval_E_name, class: "form-control", placeholder: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :eval_E_type, class: "control-label col-sm-2" %>
      <div class="col-sm-9">
