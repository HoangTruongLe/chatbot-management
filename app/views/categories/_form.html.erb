    </div>
    <div class="form-group">
      <%= f.label :tags, class: "control-label col-sm-2" %>
      <div class="col-sm-9">
        <%= f.text_field :tags, class: "form-control", placeholder: true %>
      </div>
    </div>
  </div>
  <div class="row">
		<div class="col-sm-6 text-left padding-0">
      <%= link_to("#{t('.delete_button')}", @category, method: "delete", data: { confirm: t('.delete_confirm') }, class: "btn btn-cancel btn-delete") if @category.id.present?%>
    </div>
    <div class="col-sm-6 text-right padding-0">
      <%= link_to "#{t('.cancel_button')}", categories_path, class: "btn btn-cancel" %>
			<%= f.submit "#{@category.id.present? ? t('.update_button') : t('.save_button')}", class: "btn btn-save" %>
    </div>
  </div>
<% end %>
