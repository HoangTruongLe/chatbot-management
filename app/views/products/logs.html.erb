<div class="container contain-wrapper">
  <div class="row">
    <div class="col-md-7">
      <%= "#{t('activerecord.attributes.product.id')}: #{@product.id} #{t('.log_title')}" %>
    </div>
    <div class="col-md-2">
      <%= "#{t('.user_create')}: #{@product.try(:owner).try(:name)}" %>
    </div>
    <div class="col-md-3 text-right">
      <%= "#{t('.time_create')}: #{format_datetime(@product.created_at)}" %>
    </div>
  </div>
  <br/>
  <table class="table table-striped table-bordered">
    <thead>
      <tr class="active">
        <th class="text-center"><%= t('.time_update') %></th>
        <th class="text-center"><%= t('.csv_file_name') %></th>
        <th class="text-center"><%= t('.user_update') %></th>
        <th class="text-center"><%= t('.action') %></th>
      </tr>
    </thead>
    <tbody>
      <% @product_logs.each_with_index do |prod_log, index| %>
        <tr>
          <td class="text-center vertical-middle"><%= format_datetime(prod_log.updated_at) %></td>
          <td class="text-center vertical-middle"><%= prod_log.csv_file_name %></td>
          <td class="text-center vertical-middle"><%= prod_log.try(:user).try(:name) %></td>
          <td class="text-center vertical-middle"><%= link_to(t('.detail'), index.zero? ? product_path(@product): show_log_product_path(prod_log), class: "btn btn-default btn-gray btn-action") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center"><%= paginate @product_logs %></div>
</div>
