<div class="container contain-wrapper">
  <div class="row margin-b10">
    <div class="col-sm-12 col-xs-12">
      <h4>Conversation</h4>
    </div>
  </div>

  <table class='table table-striped table-bordered site-index-table conversations'>
    <thead>
      <tr class="active">
        <th class="text-center">Order</th>
        <th class="text-center" style="width: 80%;">Content</th>
        <th class="text-center">Datetime</th>
      </tr>
    </thead>
    <tbody>
    <% if @conversations.size > 0 %>
      <% @conversations.each do |conversation| %>
        <tr>
          <td class="text-center"><%= conversation[:order] %></td>
          <td class="" style="width: 80%;"><%= raw conversation[:message] %></td>
          <td class="text-center"><%= conversation[:datetime].to_datetime.try(:strftime, '%Y/%m/%d %H:%M:%S') %></td>
        </tr>
      <%end%>
    <%else%>
      <tr>
        <td colspan="13" class="text-center">Conversation not found</td>
      </tr>
    <%end%>
    </tbody>
  </table>
</div>
