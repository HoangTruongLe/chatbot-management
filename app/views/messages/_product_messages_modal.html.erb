<div class="modal fade" id="product-messages-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">商品を選択する</h4>
        <br>
        <div class='row' style="padding: 10px 10px 15px; margin: 0;">
          <%= search_form_for @q_pm, remote: true, url: '/dasds', method: :get do |f|%>
            <div class="form-inline">
              <%= f.search_field :name_cont, placeholder: 'ID、商品名、商品タグで検索', class: 'form-control id_name_tag', style:'width:70%; font-size: 12px;' %>
              <%= link_to 'クリア', 'javascript:void(0);', class: 'btn btn-cancel clear-search-product btn-gray btn-clear-filter', style: 'color: #000; width:50px'%>
              <%= f.submit '検索', class: 'btn btn-primary btn-blue-1', style: 'width:50px'%>
            </div>
            <div class="form-inline">
              <label style="font-weight: normal; margin-top: 5px;">商品カテゴリ：</label>
            </div>
          <%end%>
        </div>
      </div>
      <div class="modal-body">
        <table class="table table-striped table-bordered table-hover product-messages-datatable">
          <thead>
            <tr>
              <th>ID</th>
              <th>アクティビティ</th>
              <th>サムネイル</th>
              <th>商品名</th>
              <th>商品カテゴリ</th>
              <th>商品タグ</th>
              <th>価格</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody class="table">
            <% Product.all.each do |m| %>
            <tr>
              <td class="text-center"><%= m.id %></td>
              <td><%= m.activity %></td>
              <td><%= "m.activity" %></td>
              <td><%= m.name %></td>
              <td><%= m.tags %></td>
              <td><%= m.price %></td>
              <td><%= m.id %></td>
              <td class="text-center">
                <%= link_to("詳細", product_path(m), class: "btn btn-default btn-gray btn-action") %>
                <a href="javascript:void(0);" class="btn btn-primary btn-blue btn-action" onclick="choose_message(this)" data-id="<%= m.id %>">選択</a>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
      </div>
    </div>
  </div>
</div>