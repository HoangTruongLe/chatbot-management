<!-- Modal -->
<div id="primary_modal" class="modal fade" role="dialog">
  <div class="vertical-alignment-helper">
    <div class="modal-dialog vertical-align-center">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <br>
          <div class='row search-border'>
            <%= search_form_for @k, remote: true, url: master_keywords_path, method: :get do |f|%>
            <h4 class="modal-title">主キーワード設定</h4>
            <div class="form-inline">
              <%= f.search_field :master_category_name_or_id_or_name_cont, placeholder: 'ID、キーワード名、カテゴリ名', class: 'form-control input-search-primary', style:'width:70%' %>
              <%= link_to 'クリア', 'javascript:void(0);', class: 'btn btn-cancel clear-input-search-p btn-gray btn-clear-filter', style: 'color: #000; width:50px'%>
              <%= f.submit '検索', class: 'btn btn-primary', style: 'width:50px'%>
            </div>
            <%end%>
          </div>
        </div>
        <div class="modal-body">
          <table class='table table-striped table-bordered '>
            <thead>
              <tr class="active">
                <th width="10%" class="text-center"><%= sort_link(@k, :id) %></th>
                <th width="40%" class="text-center"> <%=t('activerecord.attributes.keyword.name')%> </th>
                <th width="40%" class="text-center"> <%=t('activerecord.attributes.keyword.master_category')%> </th>
                <th width="10%" class="text-center"> <%=t('activerecord.attributes.keyword.action')%> </th>
              </tr>
            </thead>
            <tbody id="p_keywords">
              <%= render 'p_keyword_table' %>
            </tbody>
          </table>
        </div>
        <div class="modal-footer">
          <div class='text-center'>
            <div id="p_paginator">
              <%= paginate @keywords, :remote => true %>
            </div>
          </div>
          <br>
        </div>
        <br>
      </div>
    </div>
  </div>
</div>
