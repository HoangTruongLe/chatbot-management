<div class="container contain-wrapper">
  <%= form_for :user, url: profile_path(id: @user.id), method: :patch, html: { class: "form-horizontal" } do |f| %>
    <div class="row">
      <div class="col-sm-6">
        <h4><%= t('profile') %></h4>
      </div>
      <div class="col-sm-6 text-right padding-0">
        <%= link_to "#{t('cancel_button')}", root_path, class: "btn btn-cancel" %>
        <%= f.submit t('update_button'), class: "btn btn-save" %>
      </div>
    </div>
    <% if @user.errors.any? %>
      <br>
      <div class="error-log">
        <h5><%= t("activerecord.errors.error_message")%></h5>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row form-input-wrapper">
      <div class="form-group">
        <%= f.label :name, class: "control-label col-sm-2 required" %>
        <div class="col-sm-9">
          <%= f.text_field :name, class: "form-control", placeholder: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: "control-label col-sm-2" %>
        <div class="col-sm-9">
            <label class="control-label"><%= @user.email %></label>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :current_password, class: "control-label col-sm-2" %>
        <div class="col-sm-9">
          <%= f.password_field :current_password, class: "form-control", placeholder: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "control-label col-sm-2" %>
        <div class="col-sm-9">
          <%= f.password_field :password, class: "form-control", placeholder: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: "control-label col-sm-2" %>
        <div class="col-sm-9">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 text-left padding-0">
      </div>
      <div class="col-sm-6 text-right padding-0">
        <%= link_to "#{t('cancel_button')}", root_path, class: "btn btn-cancel" %>
        <%= f.submit t('update_button'), class: "btn btn-save" %>
      </div>
    </div>
  <% end %>
</div>
